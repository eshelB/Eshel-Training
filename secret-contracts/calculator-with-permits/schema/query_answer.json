{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryAnswer",
  "anyOf": [
    {
      "type": "object",
      "required": [
        "calculation_history"
      ],
      "properties": {
        "calculation_history": {
          "type": "object",
          "required": [
            "calcs"
          ],
          "properties": {
            "calcs": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/StoredCalculation"
              }
            },
            "total": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint64",
              "minimum": 0.0
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "StoredCalculation": {
      "type": "object",
      "required": [
        "left_operand",
        "operation",
        "result"
      ],
      "properties": {
        "left_operand": {
          "type": "integer",
          "format": "int64"
        },
        "operation": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint8",
            "minimum": 0.0
          }
        },
        "result": {
          "type": "integer",
          "format": "int64"
        },
        "right_operand": {
          "type": [
            "integer",
            "null"
          ],
          "format": "int64"
        }
      }
    }
  }
}
